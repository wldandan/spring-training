<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="emailHandler" class="com.tw.spring.training.spring.applicationContext.event.EmailEventHandler"/>
    <bean id="smsHandler" class="com.tw.spring.training.spring.applicationContext.event.SMSEventHandler"/>

    <bean id="beanLifeCycle" class="com.tw.spring.training.spring.lifeCycle.BeanLifeCycle"
          init-method="init" destroy-method="destroy" scope="singleton"/>

</beans>
